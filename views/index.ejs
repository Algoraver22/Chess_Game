<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>𝔸𝕝𝕘𝕠_ℂ𝕙𝕖𝕤𝕤</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#22c55e',
                        'primary-foreground': '#ffffff',
                    }
                }
            }
        }
    </script>
    <style>
        @keyframes blob {
            0% { transform: translate(0px, 0px) scale(1); }
            33% { transform: translate(30px, -50px) scale(1.1); }
            66% { transform: translate(-20px, 20px) scale(0.9); }
            100% { transform: translate(0px, 0px) scale(1); }
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        
        .animate-blob { animation: blob 7s infinite; }
        .animate-float { animation: float 6s ease-in-out infinite; }
        .animation-delay-2000 { animation-delay: 2s; }
        .animation-delay-4000 { animation-delay: 4s; }
        
        .glass {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .scrollbar-thin::-webkit-scrollbar { width: 6px; }
        .scrollbar-thin::-webkit-scrollbar-track { background: rgba(255, 255, 255, 0.1); border-radius: 10px; }
        .scrollbar-thin::-webkit-scrollbar-thumb { background: rgba(255, 255, 255, 0.3); border-radius: 10px; }
        .scrollbar-thin::-webkit-scrollbar-thumb:hover { background: rgba(255, 255, 255, 0.5); }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 text-white">
    <!-- Animated background -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -inset-10 opacity-50">
            <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl animate-blob"></div>
            <div class="absolute top-1/3 right-1/4 w-96 h-96 bg-yellow-500 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-2000"></div>
            <div class="absolute bottom-1/4 left-1/3 w-96 h-96 bg-pink-500 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-4000"></div>
        </div>
    </div>

    <!-- Header -->
    <header class="relative z-10 flex justify-center w-full bg-black/20 pt-3 pb-2 px-4 lg:pt-4 lg:pb-3 border-b border-white/20">
        <div class="flex items-center gap-4 max-w-3xl">
            <div onclick="location.reload()" class="cursor-pointer hover:opacity-80 transition-opacity">
                <h1 class="text-2xl lg:text-3xl font-bold bg-gradient-to-r from-green-400 to-blue-500 bg-clip-text text-transparent">
                    𝔸𝕝𝕘𝕠_ℂ𝕙𝕖𝕤𝕤
                </h1>
            </div>
            <div class="flex items-center gap-2">
                <div id="statusIndicator" class="w-3 h-3 rounded-full bg-yellow-500 animate-pulse"></div>
                <span class="text-sm text-gray-300" id="statusText">Connecting...</span>
            </div>
        </div>
    </header>
    
    <!-- Main Game Area -->
    <div class="relative z-10 container mx-auto px-4 py-8">
        <div class="flex flex-col xl:flex-row gap-8 items-start justify-center">
            
            <!-- Left Sidebar -->
            <div class="w-full xl:w-80 space-y-6">
                <!-- Player Info -->
                <div class="glass rounded-2xl p-6 shadow-2xl">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-white font-semibold" id="opponentName">Waiting...</h3>
                                <p class="text-gray-300 text-sm">Rating: 1200</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-2 bg-black/30 rounded-lg px-3 py-1">
                            <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12,6 12,12 16,14"></polyline>
                            </svg>
                            <span class="text-green-400 font-mono">10:00</span>
                        </div>
                    </div>
                    
                    <!-- Captured pieces -->
                    <div class="flex flex-wrap gap-1 min-h-[40px] bg-black/20 rounded-lg p-2" id="capturedBlack">
                        <!-- Captured black pieces will appear here -->
                    </div>
                </div>

                <!-- Game Controls -->
                <div class="glass rounded-2xl p-6 shadow-2xl">
                    <h3 class="text-white font-semibold mb-4 flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <circle cx="12" cy="12" r="3"></circle>
                            <path d="M19.4 15a1.65 1.65 0 00.33 1.82l.06.06a2 2 0 010 2.83 2 2 0 01-2.83 0l-.06-.06a1.65 1.65 0 00-1.82-.33 1.65 1.65 0 00-1 1.51V21a2 2 0 01-2 2 2 2 0 01-2-2v-.09A1.65 1.65 0 009 19.4a1.65 1.65 0 00-1.82.33l-.06.06a2 2 0 01-2.83 0 2 2 0 010-2.83l.06-.06a1.65 1.65 0 00.33-1.82 1.65 1.65 0 00-1.51-1H3a2 2 0 01-2-2 2 2 0 012-2h.09A1.65 1.65 0 004.6 9a1.65 1.65 0 00-.33-1.82l-.06-.06a2 2 0 010-2.83 2 2 0 012.83 0l.06.06a1.65 1.65 0 001.82.33H9a1.65 1.65 0 001-1.51V3a2 2 0 012-2 2 2 0 012 2v.09a1.65 1.65 0 001 1.51 1.65 1.65 0 001.82-.33l.06-.06a2 2 0 012.83 0 2 2 0 010 2.83l-.06.06a1.65 1.65 0 00-.33 1.82V9a1.65 1.65 0 001.51 1H21a2 2 0 012 2 2 2 0 01-2 2h-.09a1.65 1.65 0 00-1.51 1z"></path>
                        </svg>
                        Game Controls
                    </h3>
                    <div class="space-y-3">
                        <button id="newGameBtn" class="w-full bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-600 hover:to-emerald-600 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg">
                            New Online Game
                        </button>
                        <button id="playAIBtn" class="w-full bg-gradient-to-r from-purple-500 to-indigo-500 hover:from-purple-600 hover:to-indigo-600 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg">
                            Play vs Computer
                        </button>
                        <button class="w-full bg-gradient-to-r from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg">
                            Offer Draw
                        </button>
                        <button class="w-full bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg">
                            Resign
                        </button>
                    </div>
                </div>
            </div>

            <!-- Chess Board -->
            <div class="flex flex-col items-center">
                <div id="chessboard" class="relative grid grid-cols-8 gap-0 w-[480px] h-[480px] lg:w-[560px] lg:h-[560px] rounded-2xl overflow-hidden shadow-2xl border-4 border-white/20">
                    <!-- Board squares will be generated by JavaScript -->
                </div>

                <!-- Player indicators -->
                <div class="mt-6 flex justify-between w-[480px] lg:w-[560px]">
                    <div id="whitePlayer" class="px-4 py-2 rounded-full font-medium transition-all duration-300 bg-white/20 text-gray-300">
                        ♔ White
                    </div>
                    <div id="blackPlayer" class="px-4 py-2 rounded-full font-medium transition-all duration-300 bg-white/20 text-gray-300">
                        ♚ Black
                    </div>
                </div>
            </div>

            <!-- Right Sidebar -->
            <div class="w-full xl:w-80 space-y-6">
                <!-- Your Info -->
                <div class="glass rounded-2xl p-6 shadow-2xl">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-blue-500 rounded-full flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path d="M6 9l6 6 6-6"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-white font-semibold" id="playerName">You</h3>
                                <p class="text-gray-300 text-sm">Rating: 1150</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-2 bg-black/30 rounded-lg px-3 py-1">
                            <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12,6 12,12 16,14"></polyline>
                            </svg>
                            <span class="text-green-400 font-mono">10:00</span>
                        </div>
                    </div>
                    
                    <!-- Captured pieces -->
                    <div class="flex flex-wrap gap-1 min-h-[40px] bg-black/20 rounded-lg p-2" id="capturedWhite">
                        <!-- Captured white pieces will appear here -->
                    </div>
                </div>

                <!-- Move History -->
                <div class="glass rounded-2xl p-6 shadow-2xl">
                    <h3 class="text-white font-semibold mb-4 flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                        </svg>
                        Move History
                    </h3>
                    <div class="max-h-64 overflow-y-auto scrollbar-thin">
                        <div class="space-y-2" id="moveHistory">
                            <!-- Move history will appear here -->
                        </div>
                    </div>
                </div>

                <!-- Game Status -->
                <div class="glass rounded-2xl p-6 shadow-2xl">
                    <h3 class="text-white font-semibold mb-4">Game Status</h3>
                    <div class="space-y-3">
                        <div class="flex justify-between">
                            <span class="text-gray-300">Status:</span>
                            <span class="text-white font-medium" id="gameStatus">Connecting...</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-300">Turn:</span>
                            <span class="text-white font-medium" id="currentTurn">White</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-300">Moves:</span>
                            <span class="text-white font-medium" id="moveCount">0</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Player Name Modal -->
    <div id="nameModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50">
        <div class="glass rounded-2xl p-8 max-w-md w-full mx-4 shadow-2xl">
            <h2 class="text-2xl font-bold text-white mb-6 text-center">Welcome to 𝔸𝕝𝕘𝕠_ℂ𝕙𝕖𝕤𝕤</h2>
            <div class="mb-6">
                <label class="block text-white font-medium mb-2">Enter your name:</label>
                <input type="text" id="playerNameInput" class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Enter your name">
            </div>
            <button id="startGameBtn" class="w-full bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-600 hover:to-emerald-600 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg">
                Start Playing
            </button>
            <p class="text-center text-gray-400 text-sm mt-4">Created by <span class="text-green-400 font-semibold">Anurag</span> ✨</p>
        </div>
    </div>

    <!-- Footer -->
    <footer class="relative z-10 py-6 border-t border-white/20 bg-black/20">
        <div class="container mx-auto px-4 text-center text-gray-300">
            <p>© 2025 𝔸𝕝𝕘𝕠_ℂ𝕙𝕖𝕤𝕤. All rights reserved.</p>
            <p class="mt-2">Crafted with ❤️ by <span class="text-green-400 font-bold text-lg">Anurag</span> ⚡</p>
        </div>
    </footer>

    <script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"></script>
    <script src="/js/chessgame.js"></script>
</body>
</html>